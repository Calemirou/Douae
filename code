<body>
    <div class="container">
        <h1>I Love You Douae</h1>
        <div class="heart"></div>
    </div>
    
    <div class="flowers" id="flowers"></div>
    
    <script>
        // Create floating flowers
        const flowerColors = ['#ffafbd', '#ff8fab', '#fbc2eb', '#ff9a9e'];
        const flowersContainer = document.getElementById('flowers');
        
        for (let i = 0; i < 20; i++) {
            createFlower();
        }
        
        function createFlower() {
            const flower = document.createElement('div');
            flower.classList.add('flower');
            
            // Random properties
            const size = Math.random() * 30 + 10;
            const posX = Math.random() * window.innerWidth;
            const delay = Math.random() * 5;
            const duration = Math.random() * 5 + 5;
            const colorIndex = Math.floor(Math.random() * flowerColors.length);
            
            flower.style.width = `${size}px`;
            flower.style.height = `${size}px`;
            flower.style.left = `${posX}px`;
            flower.style.animationDelay = `${delay}s`;
            flower.style.animationDuration = `${duration}s`;
            flower.style.backgroundColor = flowerColors[colorIndex];
            
            flowersContainer.appendChild(flower);
            
            // Remove the flower after animation is complete
            setTimeout(() => {
                flower.remove();
                createFlower();
            }, duration * 1000);
        }
    </script>
</body>
